doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  meta(http-equiv='X-UA-Compatible' content='ie=edge')
  link(href='https://fonts.googleapis.com/css?family=Lora|Roboto' rel='stylesheet')
  link(rel='stylesheet' href='stylesheets/style.css')
  link(rel='icon' type='image/png' href='img/favicon-32x32.png' sizes='32x32')
  link(rel='icon' type='image/png' href='img/favicon-16x16.png' sizes='16x16')
  title REVA Careerpad | Login
// naigation area
.navigation
  .navigation__icon
    img(src='img/logo.PNG' alt='REVA Careerpad Logo')
  .navigation__nav
    ul.navigation__list
      li.navigation__item
        a.navigation__link(href='/') Home
      li.navigation__item
        a.navigation__link(href='#') About Us
      li.navigation__item
        a.navigation__link(href='login')
          | Student Panel
          i.icofont-curved-down
      li.navigation__item
        a.navigation__link(href='#') Placement Offers
      li.navigation__item
        a.navigation__link(href='#') Placement Office
// form area
.login
  .login__form
    h2.login__form--heading Login With REVA Account
    .login__form--main
      form(action='' method='post')
        label(for='email') Email/Username
        br
        input#userEmail(type='email' name='user_email' placeholder='dummymail@gmail.com')
        br
        label(for='password') Password
        br
        input#userPassword(type='password' name='user_password' placeholder='********')
        br
        input.btn.btn-primary(type='submit' value='Login Now')
      h3 Are you a new member?
      a.btn.btn-primary(href='register') Register Now
// footer area
.footer
  .footer__upper
    .row
      .col-1-of-2.footer__upper--logo
        img(src='./img/reva.jpg' alt='REVA University')
      .col-1-of-2.footer__upper--share
        ul.footer__share
          li.footer__share--text.footer__share--icon Connect With US
          li.footer__share--icon
            a(href='http://instagram.com' target='_blank' rel='noopener noreferrer')
              img(src='./img/icons/icon-instagram.png' alt='Instagram' title='Instagram')
